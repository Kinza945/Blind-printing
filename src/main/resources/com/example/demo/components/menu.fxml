<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.demo.components.MenuController"
      stylesheets="@../css/menu.css"
      styleClass="menu"
      prefWidth="60">

    <Button fx:id="home" prefWidth="60" prefHeight="55" styleClass="button-menu">
        <graphic>
            <ImageView preserveRatio="true" fitWidth="25" fitHeight="25">
                <Image url="@../icon/Home.png"/>
            </ImageView>
        </graphic>
    </Button>

    <Button fx:id="progress" prefWidth="60" prefHeight="55" styleClass="button-menu">
        <graphic>
            <ImageView preserveRatio="true" fitWidth="25" fitHeight="25">
                <Image url="@../icon/progress.png"/>
            </ImageView>
        </graphic>
    </Button>

    <Button fx:id="info" prefWidth="60" prefHeight="55" styleClass="button-menu">
        <graphic>
            <ImageView preserveRatio="true" fitWidth="25" fitHeight="25">
                <Image url="@../icon/Info.png"/>
            </ImageView>
        </graphic>
    </Button>

    <Button fx:id="award" prefWidth="60" prefHeight="55" styleClass="button-menu">
        <graphic>
            <ImageView preserveRatio="true" fitWidth="25" fitHeight="25">
                <Image url="@../icon/Award.png"/>
            </ImageView>
        </graphic>
    </Button>

    <Region VBox.vgrow="ALWAYS"/>

    <VBox styleClass="settings-menu" alignment="TOP_CENTER">
        <Button fx:id="settings" prefWidth="60" prefHeight="55" styleClass="button-menu">
            <graphic>
                <ImageView preserveRatio="true" fitWidth="25" fitHeight="25">
                    <Image url="@../icon/Settings.png"/>
                </ImageView>
            </graphic>
        </Button>
    </VBox>
</VBox>
